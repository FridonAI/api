generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ChatMessage {
  id          String      @id
  chatId      String
  Chat        Chat        @relation(fields: [chatId], references: [id])
  content     String
  messageType MessageType

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index(chatId)
}

enum MessageType {
  Query
  Response
}

model Chat {
  id        String        @id
  walletId  String
  messages  ChatMessage[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index(walletId)
}

model WalletMedia {
  walletId String
  mediaId  String

  Media Media @relation(fields: [mediaId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([walletId, mediaId])
  @@index(mediaId)
  @@index(walletId)
}

model Media {
  id String @id

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  WalletMedia WalletMedia[]
}
